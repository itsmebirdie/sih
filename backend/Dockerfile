FROM golang:1.25.1-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o main .

FROM alpine:latest

RUN adduser -D -g '' appuser
USER appuser

WORKDIR /app
COPY --from=builder /app/main .
EXPOSE 8080
CMD ["./main"]